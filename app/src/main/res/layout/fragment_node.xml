<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/node_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Node Placeholder"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/node_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/node_name"
        android:layout_marginBottom="15dp"
        android:text="192.168.0.1" />

    <TextView
        android:id="@+id/node_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/node_ip"
        android:layout_alignBottom="@+id/node_ip"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="1A:2B:3C:4D:5E:6F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_margin"
        android:background="?android:attr/listDivider" />
</RelativeLayout>
